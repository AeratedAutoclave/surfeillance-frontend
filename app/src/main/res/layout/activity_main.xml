<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp"
            tools:context=".MainActivity">

        <ImageView
                android:id="@+id/surfeillancelogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/app_logo"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="217dp"
                tools:layout_editor_absoluteX="104dp"/>

        <Button
                android:id="@+id/myTripsButton"
                android:text="My trips"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/surfeillancelogo"
                app:layout_constraintStart_toStartOf="@id/surfeillancelogo"/>

        <Button
                android:id="@+id/chooseSpotButton"
                android:text="Choose a spot"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/surfeillancelogo"
                app:layout_constraintEnd_toEndOf="@id/surfeillancelogo"/>
<!--                android:backgroundTint="@color/blue"-->



        <ImageButton
                android:id="@+id/userAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chooseSpotButton"/>

        <TextView
                android:id="@+id/mainActivityRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1) Homepage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>