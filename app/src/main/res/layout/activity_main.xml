<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp"
            tools:context=".MainActivity"
            android:background="@drawable/defaultbackground"
            tools:layout_editor_absoluteY="498dp" tools:layout_editor_absoluteX="0dp">

        <ImageView
                android:id="@+id/surfeillancelogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/app_logo"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="217dp"
                tools:layout_editor_absoluteX="104dp"/>

        <Button
                android:id="@+id/chooseSpotButton"
                android:text="Surf Spots"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/logoImage"
                app:layout_constraintBottom_toTopOf="@id/myTripsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"/>
        <Button
                android:id="@+id/myTripsButton"
                android:text="My trips"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/chooseSpotButton"
                app:layout_constraintBottom_toTopOf="@id/userAccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"/>
        <Button
                android:id="@+id/userAccount"
                android:text="Profile"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/myTripsButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"/>


        <ImageView
                android:id="@+id/logoImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/surfeillancelogo"
                app:layout_constraintBottom_toBottomOf="@id/chooseSpotButton"
                app:layout_constraintVertical_bias="0.58" app:layout_constraintHorizontal_bias="0.495"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>