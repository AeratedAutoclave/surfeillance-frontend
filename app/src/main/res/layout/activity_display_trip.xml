<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="trip" type="com.example.surfeillancefrontend.model.data.Trip"/>
        <variable name="locationConditions" type="com.example.surfeillancefrontend.model.data.Location"/>
    </data>




    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
    >

        <TextView
                android:id="@+id/tripDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spotTitle"
                android:text="@{trip.dateTime}"
                android:textSize="32px"
                app:layout_constraintDimensionRatio="1:0.5"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/material_dynamic_neutral50"

        />


        <TextView
                android:id="@+id/spotTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tripDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{trip.locationConditions.name}"
                android:textSize="32px"
                app:layout_constraintDimensionRatio="1:0.5"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/material_dynamic_neutral50"
        />

        <ImageView
                android:id="@+id/tripImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/weather"
                app:layout_constraintTop_toBottomOf="@id/spotTitle"
                app:layout_constraintEnd_toEndOf="parent"
                />


        <TextView
                android:text='@{"Wave Height: " + trip.locationConditions.waveHeight.toString() + "Meters" }'
                android:id="@+id/chain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spotTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chain2"


        />
        <ImageView
                android:id="@+id/windIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/weather"
                app:layout_constraintBottom_toTopOf="@id/chain1"
                app:layout_constraintStart_toStartOf="@id/chain1"
                app:layout_constraintStart_toEndOf="@id/chain1"


        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                app:layout_constraintStart_toEndOf="@id/windIcon"
                app:layout_constraintTop_toTopOf="@id/windIcon"
                app:layout_constraintBottom_toBottomOf="@id/windIcon"
                android:layout_margin="5dp"
        />

        <TextView
                android:text='@{"wind speed: " + trip.locationConditions.windSpeed.toString() + "mph"}'
                android:id="@+id/chain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spotTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/chain1"
                app:layout_constraintEnd_toStartOf="@id/chain3"
        />

        <ImageView
                android:id="@+id/waveIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/wave"
                app:layout_constraintBottom_toTopOf="@id/chain2"
                app:layout_constraintStart_toStartOf="@id/chain2"
                app:layout_constraintStart_toEndOf="@id/chain2"


        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waves"
                app:layout_constraintStart_toEndOf="@id/waveIcon"
                app:layout_constraintTop_toTopOf="@id/waveIcon"
                app:layout_constraintBottom_toBottomOf="@id/waveIcon"
                android:layout_margin="5dp"
        />
        <TextView
                android:text="not yet rated"
                android:id="@+id/chain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spotTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/chain2"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <ImageView
                android:id="@+id/ratingIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toTopOf="@id/chain3"
                app:layout_constraintStart_toStartOf="@id/chain3"
                app:layout_constraintStart_toEndOf="@id/chain3"


        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                app:layout_constraintStart_toEndOf="@id/ratingIcon"
                app:layout_constraintTop_toTopOf="@id/ratingIcon"
                app:layout_constraintBottom_toBottomOf="@id/ratingIcon"
                android:layout_margin="5dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
